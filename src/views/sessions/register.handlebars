<section>
  <div>
    <form class="register-form" action="/sessions/register" method="post">
      <h2>Registrar usuarios</h2>
      <input required type="text" name="first_name" placeholder="Nombre" />
      <input required type="text" name="last_name" placeholder="Apellido" />
      <input required type="email" name="email" placeholder="Email" />
      <input required type="tel" name="age" placeholder="Edad" />
      <input
        required
        type="password"
        name="password"
        placeholder="Contraseña"
      />
      <hr />
      <button type="submit">Enviar</button>
      <h3>¿Ya estás registrado?</h3>
      <h4><a href="/sessions/login">Inicia sesión</a></h4>
    </form>
  </div>
</section>