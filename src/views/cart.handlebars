<section class="cart-section">
  <h2>CART</h2>
  <div class="cart-container">
    {{#each products.products}}
      {{#if this.product}}
        <div class="cart-item">
          <div class="product">
            <img src={{this.product.thumbnails}} alt={{this.product.title}} />
            <div class="product-details">
              <span class="product-name">{{this.product.title}}</span>
              <span
                class="product-description"
              >{{this.product.description}}</span>
              <span>${{this.product.price}}</span>
            </div>
            <span class="quantity">x 2</span>
          </div>
        </div>
      {{/if}}
    {{/each}}
    <div class="cart-total">Total: $250.00</div>
  </div>

  <div class="cart-buttons">
    <form action="/carts/{{cid}}/purchase" method="post">
      <button type="submit">Finalizar compra</button>
    </form>
    <form action="/carts/{{cid}}" method="post">
      <button type="submit">Vaciar carrito</button>
    </form>
  </div>

